<div class="container-md">
    <br>
    {{#if person}}
        <div class="row">
            <div class="col-4">
                <Input type="text" @value={{this.person.firstName}} class="form-control" placeholder="First name" aria-label="First name" @required={{true}} />
            </div>
            <div class="col-4">
                <Input type="text" @value={{this.person.lastName}} class="form-control" placeholder="Last name" aria-label="Last name" @required={{true}} />
            </div>
            <div class="col-4">
                 <button type="button" class="btn btn-outline-success" {{ on "click" (fn this.save this.person) }}>Save</button>
                 <button type="button" class="btn btn-outline-success" {{ on "click" (fn this.cancel this.person) }}>Cancel</button>
            </div>
        </div>
        <br>
        <br>
    {{/if}}

    <button type="button" class="btn btn-outline-dark" {{ on "click" (fn this.add this.person)}}>Add</button>
    <br><br>
    <table class="table table-bordered">
    <thead>
        <tr>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        {{#each model as |person|}}
            <tr>
                <td>{{person.firstName}}</td>
                <td>{{person.lastName}}</td>
                <td>
                    <button type="button" class="btn btn-outline-dark" {{ on "click" (fn this.edit person)  }}>Edit</button>
                    <button type="button" class="btn btn-outline-dark" {{ on "click" (fn this.destroyRecord person) }}>Delete</button>
                </td>
            </tr>
        {{/each}}
    </tbody>
    </table>
</div>